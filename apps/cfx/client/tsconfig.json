{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "lib": [
      "es2017"
    ],
    "types": [
      "@citizenfx/client",
      "@types/node"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "./**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "**/node_modules"
  ]
}